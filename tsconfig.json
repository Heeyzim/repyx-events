{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    // Location
    "baseUrl": "./src",
    "paths": {
      "@client/*": ["./client/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"]
    },
    "outDir": "./dist",
    // Other
    "types": ["@citizenfx/server", "@citizenfx/client", "@types/node"],
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules", "**/.test.ts"]
}
